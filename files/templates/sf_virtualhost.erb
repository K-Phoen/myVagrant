<VirtualHost *:80>
  ServerName <%= host %>
  <% if aliases %>
    ServerAlias <%= aliases %>
  <% end %>

  DocumentRoot "<%= projectroot %>/web"
  DirectoryIndex index.php

  <Directory "<%= projectroot %>/web">
    AllowOverride All
    Allow from All
  </Directory>

  Alias /sf <%= projectroot %>/lib/vendor/symfony/data/web/sf
  <Directory "<%= projectroot %>/lib/vendor/symfony/data/web/sf">
    AllowOverride All
    Allow from All
  </Directory>
</VirtualHost>
